<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2 style="color:red"><%= pluralize(@user.errors.count, "error") %> 必須項目を入力してください</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><span style="color:red">*</span><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><span style="color:red">*</span><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><span style="color:red">*</span><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ユーザー名" %><span style="color:red">*</span><br />
          <%= f.text_field :nickname, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><span style="color:red">*</span><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="field">
          <%= f.label :art_style, "アートスタイル"(ミュージシャン/イラストレーター/etc...) %><span style="color:red">*</span><br />
          <%= f.text_area :art_style, class: :form__text, id:"user_occupation" %>
        </div>

        <div class="field">
          <%= f.label :influenced_by, "影響を受けたアーティスト" %><br />
          <%= f.text_area :influenced_by, class: :form__text, id:"user_position" %>
        </div>

        <div class="field">
          <%= f.label :image %><br/>
          <%= f.file_field :image %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>