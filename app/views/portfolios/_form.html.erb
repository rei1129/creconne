<%= form_with model: @portfolio, local: true do |f|%>
      <% if @portfolio.errors.any? %>
        <div id="error_explanation">
          <h2 style="color:red"><%= pluralize(@portfolio.errors.count, "error") %> 必須項目を入力してください</h2>

          <ul>
          <% @portfolio.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  <div class="field">
    <%= f.label :title, "作品名" %><span style="color:red">*</span><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :catch_copy, "キャッチコピー" %><span style="color:red">*</span><br />
    <%= f.text_area :catch_copy, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><span style="color:red">*</span><br />
    <%= f.text_area :concept, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "作品の画像" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>

 <div class="field">
    <%= f.label :youtube_link, "youtubeのリンク" %><br />
    <%= f.text_area :youtube_link, class: :form__text, id:"prototype_concept" %>
  </div>

<div class="field">
    <%= f.label :soundcloud, "soundcloud" %><br />
    <%= f.text_area :soundcloud, class: :form__text, id:"prototype_concept" %>
  </div>

<div class="field">
    <%= f.label :genre_id, "ジャンル" %><span style="color:red">*</span><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>


  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>