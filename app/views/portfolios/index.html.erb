<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting">
        ようこそ、
        <%= link_to "#{current_user.nickname}さん", class: :greeting__link%>
       </div>
    <% end %>

    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
    <% @portfolios.each do |portfolio| %>
        <%= render partial:"portfolio", locals:{ portfolio: portfolio} %>
      <% end %>
    </div>
  </div>
</main>
